*
*:after
*:before
	box-sizing border-box


.btn
	border none
	border-radius 0.4em
	color #FFF
	font-weight 700
	padding 0.7em
	width 70%
	&-green
		background: linear-gradient(to bottom, rgba(12,240,119,1) 0%, rgba(24,105,62,1) 100%);

		



.Container 
	display flex
	align-items center
	justify-content center
	height 600px
	margin 0 auto
	text-align center
	width 90%
.Form
	&-inputGroup
		color #787878
		margin 0.5em
		padding 0.1em
	&-icon
	&-info
	&-inputText
	&-label
		height 3em
	&-labelCheck
		color #FFF
		font-weight 400
		font-size 0.8em
		margin-right 4em
	&-icon
	&-info
		background #FFF
		margin 0
		padding 0.5em
	&-inputText
		border none
		border-radius 0.4em
		padding  0.1em 0 0 1em
	&-info
		border-right 1px solid #CFCFCF
		border-radius 0.5em 0 0 0.5em
		margin-right -0.22em
	&-icon
		border-left 1px solid #CFCFCF
		border-radius 0 0.5em 0.5em 0
		margin-left -0.22em
	&-messages
		background #FFFFCB
		color #FF9191
		font-weight 600
		font-size 0.8em
		margin-bottom 1em
		padding 1em
		
.Login
	background #242423
	border-radius 0.4em
	box-shadow 0px 0px 10px rgba(0, 0, 0, 0.3);
	color #FFF
	height 500px
	width 400px
	
.Logo-Container
	border-radius 50%
	
